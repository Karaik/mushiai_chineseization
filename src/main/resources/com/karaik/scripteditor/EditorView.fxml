<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.karaik.scripteditor.controller.EditorController">
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <Button text="打开文件" onAction="#handleOpenFile" />
            <Button text="保存译文" onAction="#handleSaveFile" />

            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="每页显示:" />
                <ComboBox fx:id="itemsPerPageComboBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="10" />
                            <String fx:value="20" />
                            <String fx:value="50" />
                            <String fx:value="100" />
                            <String fx:value="300" />
                            <String fx:value="500" />
                            <String fx:value="1000" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="50" />
                    </value>
                </ComboBox>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />
            <CheckBox fx:id="alwaysOnTopCheckBox" text="总在最前" onAction="#handleAlwaysOnTopToggle"/>
        </HBox>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
                <Pagination fx:id="pagination" HBox.hgrow="ALWAYS" />
            </HBox>

            <ListView fx:id="entryListView" VBox.vgrow="ALWAYS" />

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="5.0" right="10.0" bottom="5.0" left="10.0"/>
            </padding>
            <ProgressBar fx:id="progressBar" prefWidth="200" progress="0.0"/>
            <Label fx:id="progressLabel" text="准备就绪"/>
        </HBox>
    </bottom>
</BorderPane>