<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<SplitPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.karaik.scripteditor.controller.EditorController"
           orientation="HORIZONTAL" dividerPositions="0.5">

    <!-- 原文（左侧） -->
    <VBox prefWidth="600.0" spacing="8">
        <Label text="原文" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="originalContainer" spacing="8" padding="10">
                <!-- 自动填充原文TextArea -->
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- 译文（右侧） -->
    <VBox prefWidth="600.0" spacing="8">
        <Label text="译文" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="translatedContainer" spacing="8" padding="10">
                <!-- 自动填充译文TextArea -->
            </VBox>
        </ScrollPane>
    </VBox>

</SplitPane>
